[
  {
    "bindings": {
      "cmd-shift-g": ["task::Spawn", { "task_name": "lazygit" }],
      "cmd-shift-j": ["task::Spawn", { "task_name": "jjui" }],
      "cmd-r": "workspace::Reload"
    }
  },
  {
    "context": "Editor && extension == tex",
    "bindings": {
      "cmd-alt-b": ["task::Spawn", { "task_name": "latexmk-build" }],
      "cmd-alt-c": ["task::Spawn", { "task_name": "latexmk-clean" }]
    }
  },
  {
    "context": "Editor && extension == typ",
    "bindings": {
      "cmd-alt-b": ["task::Spawn", { "task_name": "typst-compile" }],
      "cmd-alt-w": ["task::Spawn", { "task_name": "typst-watch" }]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-/": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {}
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-a": "editor::SortLinesCaseInsensitive",
      "alt-shift-a": ["task::Spawn", { "task_name": "keep-sorted" }],
      "tab": "editor::Tab"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "tab": "editor::ComposeCompletion"
    }
  },
  {
    "context": "Editor && edit_prediction_conflict",
    "bindings": {
      "alt-l": "editor::AcceptEditPrediction",
      "alt-k": "editor::AcceptNextWordEditPrediction",
      "alt-n": "editor::NextEditPrediction",
      "alt-p": "editor::PreviousEditPrediction",
      "alt-'": "editor::ToggleEditPrediction",
      "alt-j": "editor::ShowEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-l": "editor::AcceptEditPrediction",
      "alt-k": "editor::AcceptNextWordEditPrediction",
      "alt-n": "editor::NextEditPrediction",
      "alt-p": "editor::PreviousEditPrediction",
      "alt-'": "editor::ToggleEditPrediction",
      "alt-j": "editor::ShowEditPrediction"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // Put key bindings here if you want them to work in normal & visual mode.
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "g j": "editor::AddSelectionBelow",
      "g k": "editor::AddSelectionAbove",
      "g n": "vim::SelectNextMatch",
      "g shift-n": "vim::SelectPreviousMatch",
      "g l": "vim::SelectNext",
      "g h": "vim::SelectPrevious",
      "g shift-l": ["editor::SelectNext", { "replace_newest": true }],
      "g shift-h": ["editor::SelectPrevious", { "replace_newest": true }]
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      // "shift-y": ["workspace::SendKeystrokes", "y $"] // Use neovim's yank behavior: yank to end of line.
      "space g g": ["task::Spawn", { "task_name": "lazygit" }]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore" // In insert mode, make jk escape to normal mode.
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Put key bindings here (in addition to the context above) if you want them to
      // work when no editor exists.
      "space f": "file_finder::Toggle"
    }
  }
]
